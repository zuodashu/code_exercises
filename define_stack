#include<iostream>
using namespace std;

template<class T>
struct Node{
      T data;
      Node<T> *next;
      Node(T data_): data(data_),next(NULL){}
};

template<class T>
class stack{
  Node<T> top;
public:
  //Node<T> stack(){top=0;};
  stack(){top=NULL;}
  T pop() {
      if(top == NULL)
               throw exception();//
          Node<T> * temp = top;
          top = top->next;
          T  result= temp->val;
          delete temp;
          return result;    
    }
 void push (T item){
  Node<T> * t = new Node<T>(item);//corrected by bird
    t->next = top;
    top = t;
   }
};
/**/

int main(){
  
  // Node<int> foo(0);
  // Node<float> foo__(0.3);

   stack<int> my_stack;
   my_stack.push(3);
   my_stack.pop();
}


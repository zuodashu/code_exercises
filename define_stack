#include<iostream>
using namespace std;

template<class T>
struct Node{
      T data;
      Node *next;
      node(T data_): data(data_),next(NULL){}
};

template<class T>
class stack{
  Node<T> top;
public:
  //Node<T> stack(){top=0;};
  Node<T> pop(){
    if (top !=0){
       T item=top.data;
       top=top.next;
       return item;
     }
    return 0;
    }
void push (T item){
  Node<T> t=new Node<T>(item);
    t.next=top;
    top=t;
   }
};
/**/

int main(){
  
  // Node<int> foo(0);
  // Node<float> foo__(0.3);

   stack<int> my_stack;
   my_stack.push(3);
   my_stack.pop();
}

